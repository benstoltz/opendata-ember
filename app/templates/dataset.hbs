<div class="clearfix">
  <h2 class="pull-left clearfix"><img class="img-thumbnail" src="{{thumbnailSrc}}"><span>{{model.name}}</span></h2>
  {{download-button model=model}}
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-6 col-md-6">
      <h4>Description</h4>
      <p>{{{model.description}}}</p>

    </div>
    <div class="col-lg-6 col-md-6">
      <dl class="dl-horizontal">

        <dt>Owner:</dt>
        <dd>{{model.owner}}</dd>

        <dt>Created:</dt>
        <dd>{{moment-from-now model.createdAt}}</dd>

        <dt>Updated:</dt>
        <dd>{{moment-from-now model.createdAt}}</dd>

        <dt>Tags:</dt>
        <dd>{{tagsString}}</dd>

        <dt>Views:</dt>
        <dd>{{model.views}}</dd>

      </dl>
    </div>
  </div>
</div>

{{#if showMap}}
    <div class="container map-container">
      {{esri-map model=model}}
    </div>
{{/if}}


<div id="table-container" class="container">
  {{dataset-table model=model orderBy=model.objectIdField}}
</div>

{{outlet}}
