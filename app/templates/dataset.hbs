<div class="clearfix">
  <h2 class="pull-left clearfix"><img class="img-thumbnail" src="{{thumbnailSrc}}"><span>{{model.name}}</span></h2>
  <div class="dropdown pull-right">
    <button class="btn btn-primary" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Download
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
      <li><a href="{{baseUrl}}.csv" target="_blank" download>Spreadsheet</a></li>
      <li><a href="{{baseUrl}}.kml" target="_blank" download>KML</a></li>
      <li><a href="{{baseUrl}}.zip" target="_blank" download>Shapefile</a></li>
      <li class="divider"></li>
      <li><a href="{{model.landingPage}}" target="_blank">View in ArcGIS Online</a></li>
      <li><a href="{{model.url}}" target="_blank">API</a></li>
    </ul>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-6 col-md-6">
      <h4>Description</h4>
      <p>{{{model.description}}}</p>
      
    </div>
    <div class="col-lg-6 col-md-6">
      <dl class="dl-horizontal">
        
        <dt>Owner:</dt>
        <dd>{{model.owner}}</dd>

        <dt>Created:</dt>
        <dd>{{moment-from-now model.createdAt}}</dd>
        
        <dt>Updated:</dt>
        <dd>{{moment-from-now model.createdAt}}</dd>

        <dt>Tags:</dt>
        <dd>{{tagsString}}</dd>
        
        <dt>Views:</dt>
        <dd>{{model.views}}</dd>

      </dl>
    </div>
  </div>
</div>

<div class="container">
  {{esri-map model=model}}
</div>

<div id="table-container" class="container">
  {{dataset-table model=model}}
</div>

{{outlet}}
